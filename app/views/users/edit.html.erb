<% provide(:title, "Edit user") %>
<h1>プロフィールを編集する</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <div class="profile-edit">
        <h4><%= @user.username %></h4>
          <%= image_tag @user.image_name.url, size: "50x50" %>
        <%= f.file_field :image_name %>
      </div>

      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :username, "ユーザーネーム" %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :website, "ウェブサイト" %>
      <%= f.text_field :website, class: 'form-control' %>

      <%= f.label :introduce, "自己紹介" %>
      <%= f.text_area :introduce, class: 'form-control', size: "30x3" %>

      <div class="private">
        <p>非公開情報</p>
      </div>
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :phone, "電話番号" %>
      <%= f.text_field :phone, class: 'form-control' %>

      <%= f.label :sex, '性別', class:'control-label' %>
      <%= f.select :sex, [["男性","男性"],["女性","女性"]], class: 'form-control', prompt: "選択" %>

      <%= f.submit "送信する", class: "btn btn-primary" %>

      <div class="del">
        <%= link_to "アカウントを削除する", '#' %>
      </div>
    <% end %>
  </div>
</div>
