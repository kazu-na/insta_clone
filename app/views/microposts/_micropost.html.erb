<% if current_page?(root_path) %>
  <li id="micropost-<%= micropost.id %>">
    <%= link_to image_tag(micropost.image_name.url, size: "30x30"), micropost.user %>
    <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
    <span class="content">
      <%= image_tag micropost.image.url if micropost.image? %>
      <%= micropost.content %>
    </span>
    <span class="timestamp">
      <%= time_ago_in_words(micropost.created_at) %>前
      <% if current_user?(micropost.user) %>
        <%= link_to "削除", micropost, method: :delete,
                                         data: { confirm: "本当に削除しますか？" } %>
      <% end %>
    </span>
  </li>
<% else %>
  <span class="content">
    <%= image_tag(micropost.image.url, size: "300x300") if micropost.image? %>
  </span>
<% end %>
